<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- Header  Starts -->

        <LinearLayout
            android:id="@+id/lnlyRegisterComplaint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/lblTitleStep2Register"
                android:textColor="#000000" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/lnLyProgressPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_below="@+id/lnlyRegisterComplaint">
                
            <ProgressBar
				android:id="@+id/progressPhoto"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="290dp"
				android:layout_height="30dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:progress="0"
				android:secondaryProgress="0" />
            
            <TextView
		        android:id="@+id/txtProcessPhoto"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/loadingProcessPhoto"/>
         </LinearLayout>
        <!-- Header Ends -->


        <!-- Footer Start -->

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >
        </LinearLayout>
        <!-- Footer Ends -->

        <LinearLayout
            android:id="@+id/lnLyComplaintBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnLyProgressPhoto"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- plate Number Label -->

            <EditText
                android:id="@id/idTxtPlate"
                style="@style/inptLinedStyleOjoVial"
                android:hint="@string/lblNumberPlate"
                android:singleLine="true" />

            <TextView
                android:id="@id/idLblLatitude"
                style="@style/lnkStyle2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:visibility="gone" />

            <TextView
                android:id="@id/idLblLongitud"
                style="@style/lnkStyle2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:visibility="gone" />

            <Spinner
                android:id="@id/cboSpecificDistrict"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip" />

            <Spinner
                android:id="@id/cboDistrict"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="2dip"
                android:visibility="gone" />

            <EditText
                android:id="@id/idTxtFullAddress"
                style="@style/inptLinedStyleOjoVial"
                android:hint="@string/lblInsertDireccion"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@id/idTxtAditionalComment"
                style="@style/inptLinedStyleOjoVial"
                android:hint="@string/lblAditionalComment"
                android:inputType="textMultiLine"
                android:maxLength="100" />

            <!-- Register button -->

            <Button
                android:id="@id/idBntRegisterComplient"
                style="@style/btnStyleOjoVial"
                android:onClick="onClickSaveRegister"
                android:text="@string/btnRegistrar" />
        </LinearLayout>
		<LinearLayout
            android:id="@+id/lnLyProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical"
            android:padding="10dip"
            android:background="#80000000">
                
            <ProgressBar
				android:id="@id/progressBar"
				style="?android:attr/progressBarStyleLarge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" />
            
            <TextView
		        android:id="@+id/txtMessages"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/loadingSaveComplaint"
		        style="@style/lblStyleMessagesProcess"/>
         </LinearLayout>		
    </RelativeLayout>

</ScrollView>