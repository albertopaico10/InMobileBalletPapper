<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris" >

        <!-- Footer Start -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >
        </LinearLayout>
        <!-- Footer Ends -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- Email Label -->
            <EditText
                android:id="@id/idRegisterEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <!-- Password Label -->
            <EditText
                android:id="@id/idRegisterPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:hint="@string/password_hint"
                android:password="true"
                android:singleLine="true" />
            
            <!-- Name Label -->
            <EditText
                android:id="@id/idNameUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/nameRegister"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
            
            <!-- Last Name Label -->
            <EditText
                android:id="@id/idLastNameUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/lastNameRegister"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
            
            <!-- DNI Label -->
            <EditText
                android:id="@id/idDniUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/dniRegister"
                android:singleLine="true"
                android:maxLength="8" 
                android:inputType="number"/>
            
            
            <!-- Adult CheckBox -->
            <CheckBox
                android:id="@id/idChkAdult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/chkAdult"/>
             <!-- Accept Termins and Conditions CheckBox -->
            <CheckBox
                android:id="@id/idChkAcceptTerm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:hint="@string/chkAcceptTerm"/>
            
            <!-- Register button -->
            <Button
                android:id="@id/idBtnRegister"
                style="@style/btnStyleBlackpearl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:onClick="onClickSaveUser"
                android:text="@string/btnRegister" />
            
        </LinearLayout>
    </RelativeLayout>

</ScrollView>